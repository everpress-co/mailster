{
	"require": {
		"php": "^7.2|^8.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^7.0",
		"yoast/phpunit-polyfills": "^1.0.1",
		"mockery/mockery": "1.2",
		"brain/monkey": "2.*",
		"pronamic/wp-documentor": "^1.2"
	},
	"autoload": {
		"psr-4": {
			"Mailster\\": "."
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Mailster\\Tests\\": "./tests"
		}
	},
	"scripts": {
		"test": "phpunit --config=phpunit-unit.xml",
		"test:wordpress": "phpunit --config=phpunit-integration.xml"
	}
}
